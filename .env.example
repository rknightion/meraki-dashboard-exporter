# Example environment variables for Meraki Dashboard Exporter
# Copy this file to .env and fill in your values

# Required: Your Meraki Dashboard API key
MERAKI_EXPORTER_MERAKI__API_KEY=your_api_key_here

# Optional: Specific organization ID to export metrics for
# Leave empty to export metrics for all accessible organizations
MERAKI_EXPORTER_MERAKI__ORG_ID=

# Optional: Log level (DEBUG, INFO, WARNING, ERROR)
MERAKI_EXPORTER_LOGGING__LEVEL=INFO

# Optional: API configuration
# Regional API endpoints: https://api.meraki.com/api/v1 (global), https://api.meraki.ca/api/v1 (Canada),
# https://api.meraki.cn/api/v1 (China), https://api.meraki.in/api/v1 (India), https://api.gov-meraki.com/api/v1 (US Federal)
# MERAKI_EXPORTER_MERAKI__API_BASE_URL=https://api.meraki.com/api/v1
# MERAKI_EXPORTER_API__TIMEOUT=30
# MERAKI_EXPORTER_API__MAX_RETRIES=4

# Optional: Update intervals (in seconds)
# MERAKI_EXPORTER_UPDATE_INTERVALS__FAST=60      # Sensor data (30-300s)
# MERAKI_EXPORTER_UPDATE_INTERVALS__MEDIUM=300   # Device/org metrics (300-1800s)
# MERAKI_EXPORTER_UPDATE_INTERVALS__SLOW=900     # Config data (600-3600s)

# Optional: OpenTelemetry configuration
MERAKI_EXPORTER_OTEL__ENABLED=false
MERAKI_EXPORTER_OTEL__ENDPOINT=http://localhost:4317
MERAKI_EXPORTER_OTEL__SERVICE_NAME=meraki-dashboard-exporter

# Docker Hub credentials (for pushing images)
# DOCKERHUB_USERNAME=yourusername
# DOCKERHUB_TOKEN=yourtoken
